---
import type { SkillCategoryProps } from "../types";

interface Props {
  skills?: SkillCategoryProps[];
}

const { skills = [] } = Astro.props as Props;
---

<section id="skills" class="py-20 px-6 bg-white dark:bg-gray-950">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-4xl font-extrabold mb-14 bg-gradient-to-r from-pink-500 to-purple-500 bg-clip-text text-transparent flex items-center justify-center gap-2">
    </h2>

    <div class="flex flex-col gap-16">
      {skills.map((group) => (
        <div>
          <h3 class="text-2xl font-semibold mb-10 text-gray-800 dark:text-gray-200">
            {group.category}
          </h3>

          <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-10 justify-items-center">
            {group.items.map((item) => (
              <div class="flex flex-col items-center text-center group">
                <div
                  class="w-20 h-20 flex items-center justify-center rounded-xl bg-gray-100 dark:bg-gray-800 shadow-sm transition-all duration-300 group-hover:scale-110 group-hover:shadow-lg group-hover:bg-gradient-to-br from-pink-200 to-purple-200 dark:from-gray-700 dark:to-gray-600"
                >
                  <img
                    src={item.icon}
                    alt={item.name}
                    class="w-10 h-10 object-contain grayscale group-hover:grayscale-0 transition-all duration-300"
                    loading="lazy"
                  />
                </div>
                <p class="text-sm mt-3 font-medium text-gray-700 dark:text-gray-300">
                  {item.name}
                </p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
